# Environment variables for server deployment
# Copy this file to deploy-server.env and fill in your values

# Docker Hub Configuration
DOCKER_HUB_USERNAME=your-dockerhub-username
IMAGE_TAG=latest

# Base Directory (default: /opt/apps/winland)
BASE_DIR=/opt/apps/winland

# Internal Ports (inside containers - don't change unless needed)
BACKEND_PORT=3002
ADMIN_PORT=80
CTV_PORT=3000

# External Ports (mapped from host - for reverse proxy)
# These are the ports that will be accessible from outside the container
EXTERNAL_BACKEND_PORT=3002
EXTERNAL_ADMIN_PORT=8080
EXTERNAL_CTV_PORT=3000

# Backend Environment Variables
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/winland?schema=public
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# CTV Portal Environment Variables
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production
NEXTAUTH_URL=http://your-domain.com

